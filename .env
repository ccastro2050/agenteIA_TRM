# ── LLM principal ─────────────────────────────────────────────────────────────
LLM_PROVIDER=deepseek
LLM_MODEL=deepseek-chat

# ── Claves API ────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX-XXXXXXXX
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
DEEPSEEK_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ── Embeddings ────────────────────────────────────────────────────────────────
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# ── API REST ──────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8001

# ── LangSmith (observabilidad) ────────────────────────────────────────────────
LANGSMITH_API_KEY=lsv2_pt_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX_XXXXXXXXXXXXXXXX
LANGSMITH_PROJECT=agenteIA-TRM

# ── RAG ───────────────────────────────────────────────────────────────────────
RETRIEVAL_K=4
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# ── pgvector (PostgreSQL + extensión vector) ──────────────────────────────────
# Instalación rápida con Docker:
#   docker run -d --name pgvector \
#     -e POSTGRES_PASSWORD=postgres \
#     -e POSTGRES_DB=bdvector \
#     -p 5432:5432 pgvector/pgvector:pg16
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=bdvector
PG_USER=postgres
PG_PASSWORD=postgres
PG_COLLECTION=dane_reportes
